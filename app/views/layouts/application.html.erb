<!DOCTYPE html>
<html>
<head>
	<title>The Reality League</title>
	<link href='http://fonts.googleapis.com/css?family=Patua+One|Open+Sans' rel='stylesheet' type='text/css'>
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
	<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="wrapper">
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
				<%= link_to "The Reality League", root_path, {:class => "navbar-brand"} %>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li><a href="/pages/about">About</a></li>
						<li class="dropdown">
							<a href="/leagues" class="dropdown-toggle" data-toggle="dropdown">Leagues <span class="caret"></span></a> 
							<ul class="dropdown-menu" role="menu">
								<li><a href="/leagues">My Dashboard</a></li>
								<li class="divider"></li>
								<li><a href="/leagues/new">Create New League</a></li>
								<li><a href="/leagues/search">Search Leagues</a></li>
							</ul>
						</li>

						<li><a href="/shows">Resources</a></li>
						<li class="dropdown">
							<a href="/shows" class="dropdown-toggle" data-toggle="dropdown">Shows <span class="caret"></span></a> 
							<ul class="dropdown-menu" role="menu">
								<% @shows.each do |show| %>
									<li><%= link_to show.name, show_path(show.id) %></li>
								<% end %>
							</ul>
						</li>
						<% if @current_user && @current_user.admin? %>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <span class="caret"></span></a> 
								<ul class="dropdown-menu" role="menu">
									<li class="dropdown-header">Manage Shows</li>
									<li><a href="/shows/new">Add new show</a></li> <!-- FIXME -->
									<li><a href="/shows">View/Update shows</a></li> <!-- FIXME -->
									<li><a href="/events/new">Add scoring schema</a></li> <!-- FIXME -->
									<li><a href="/events">View schemas</a></li> <!-- FIXME -->
									<li class="divider"></li>
									<li class="dropdown-header">Manage Seasons</li>
									<li><a href="/seasons/new">Add new season</a></li> <!-- FIXME -->
									<li><a href="/seasons">View/Update seasons</a></li> <!-- FIXME -->
									<li class="divider"></li>
									<li class="dropdown-header">Manage Users</li>
									<li><a href="#">View all users</a></li> <!-- FIXME -->
									<li class="divider"></li>
									<li class="dropdown-header">Manage Leagues</li>
									<li><a href="#">View all leagues</a></li> <!-- FIXME -->
								</ul>
							</li>
						<% end %>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<%== smartnav %>
					</ul>

				</div>
			</div>
		</nav>
		<%= yield %>
		<div class="copyright">Built by Fai Weiner for GA's WDI-5</div>
	</div>
</body>
</html>
