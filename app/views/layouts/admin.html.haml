!!!
%html
	%head
		%title The Reality League
		%link{:href => "http://fonts.googleapis.com/css?family=Patua+One|Open+Sans", :rel => "stylesheet", :type => "text/css"}/
		%link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", :rel => "stylesheet"}/
		%link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", :rel => "stylesheet"}/
		= stylesheet_link_tag 'admin'
		= javascript_include_tag 'application', 'data-turbolinks-track' => false
		= csrf_meta_tags
	%body
		.wrapper
			%nav.navbar.navbar-default{:role => "navigation"}
				.container-fluid
					.collapse.navbar-collapse
						%ul.nav.navbar-nav.navbar-right
							- if @current_user.present?
								%li
									%a{:href => root_path}
										Back to User Portal
								%li
									%a{:href => user_path(@current_user)}
										= @current_user.username
								%li
									%a{:href => "/login", :data => {:method => :delete, :confirm => 'Really logout?'}} Logout
			%div.col-lg-2
				%nav.navbar#aside_nav
					.container-fluid
						.collapse.navbar-collapse
							%ul.nav.nav-pills.nav-stacked
								%li.dropdown
									%a{:href => admin_path} Admin Dashboard
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "/leagues"}
										Show
										%span.caret
									%ul.dropdown-menu{:role => "menu"}
										%li= link_to "View All Shows", admin_shows_path
										%li= link_to "Add New Show", new_show_path
										%li= link_to "Search Leagues", leagues_search_path
									#shows_menu.panel-collapse.collapse.in
										%ul.panel-body.dropdown-menu{:role => "menu"}
											%li= link_to "View all shows", shows_path
											%li.divider
											- @shows.each do |show|
												%li= link_to show.name, show_path(show.id)
								%li.dropdown
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
										Schemes
								%li.dropdown
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
										Seasons
								%li.dropdown
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
										Episodes												
								%li.dropdown
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
										Events
								%li.dropdown
									%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
										Users										
			%div#admin_content.col-lg-10
				= yield