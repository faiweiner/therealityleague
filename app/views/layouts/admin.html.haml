!!!
%html
	%head
		%title The Reality League
		= stylesheet_link_tag 'admin'
		= stylesheet_link_tag 'bootstrap.min'
		= javascript_include_tag 'application', 'data-turbolinks-track' => false
		= csrf_meta_tags
	%body
		.wrapper
			%nav.navbar.navbar-default{:role => "navigation"}
				.container-fluid
					.collapse.navbar-collapse
						%ul.nav.navbar-nav.navbar-left
							%li
								%a{:href => admin_path} Dashboard
							%li
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => "/leagues"}
									Shows
									%span.caret
								%ul.dropdown-menu{:role => "menu"}
									%li= link_to "View Shows", admin_shows_path
									%li= link_to "Add New Show", new_show_path
									%li= link_to "Search Leagues (User Portal)", leagues_search_path
									%li.divider
									%li= link_to "Manage Seasons", admin_seasons_path
									%li= link_to "Add New Season", new_season_path
									%li= link_to "Add New Episode", new_episode_path
									%li= link_to "Add Contestants", statuses_path
									%li.divider
									%li= link_to "Manage All Contestants", "#"
							%li
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
									Schemes
									%span.caret		
								%ul.dropdown-menu{:role => "menu"}
									%li= link_to "Manage Schemes", schemes_path
									%li= link_to "Add New Scheme", new_scheme_path
							%li
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
									Events
									%span.caret		
								%ul.dropdown-menu{:role => "menu"}
									%li= link_to "Track events", new_event_path
							%li
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
									Users	
									%span.caret		
								%ul.dropdown-menu{:role => "menu"}
									%li= link_to "View All Shows", admin_shows_path
									%li= link_to "Add New Show", new_show_path
									%li= link_to "Search Leagues", leagues_search_path		
							%li
								%a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
									Debugging	
									%span.caret		
								%ul.dropdown-menu{:role => "menu"}
									%li= link_to "View Messages", messages_path							
						%ul.nav.navbar-nav.navbar-right
							- if @current_user.present?
								%li
									%a{:href => root_path}
										Back to User Portal
								%li
									%a{:href => user_path(@current_user)}
										= @current_user.username
								%li
									%a{:href => "/login", :data => {:method => :delete, :confirm => 'Really logout?'}} Logout
			%div.col-lg-2
			%div#admin_content.col-lg-12
				= yield