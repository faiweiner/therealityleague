.panel-body
	.col-lg-12
		%table.table.table-hover
			%h3 Participants' Weekly Scores
			%thead
				%th Participants
				- @league.season.episode_count.times do |i|
					%th= i+1
				%th Total
			%tbody
				- @participants.each_with_index do |participant, index|
					%tr
						%td= participant.username
						- participant.rounds.each do |round|
							%td= round.calculate_round_points
						%td= participant.calculate_total_round_points(@league)