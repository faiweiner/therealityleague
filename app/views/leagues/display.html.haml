- if flash[:notice].present? 
	.alert{class: "#{flash[:color]}", role: "alert"}
		= flash[:notice]
.panel.panel-default#league_view
	.panel-body
		.col-lg-8.col-md-8.col-sm-8
			%h2= @league.name
			%p
				= @league.season.show.name + ": "
				= @league.season.name
				%br/
				= "Premiere: #{@league.season.premiere_date.strftime("%D")} at #{@league.season.premiere_date.strftime("%l:%M %P %Z")}"
			#league-action-panel
				= render partial: "/shows/scoring_system"
				.btn.btn-default.btn-sm.disabled
					League locks on
					= @league.draft_deadline.strftime("%B %d")
					at
					= @league.draft_deadline.strftime("%I:%M %P %Z")
		- if @alert.present?
			.col-lg-4
				.alert#alert-panel.alert-dismissible{class: "#{@alert_class}", role: "alert"}
					%button.close{:type => "button", "data-dismiss" => "alert", "aria-label" => "Close"}
						%span.small{"aria-hidden" => true} &times;
					%p
						- @alert.each_with_index do |alert, i|
							%strong= @alert[i] if i == 0
							= @alert[i] unless i == 0
					- if @invite_button.length == 3
						%p= link_to "#{@invite_button[0]}", @invite_button[1], class: "#{@invite_button[2]}"
					- elsif @invite_button.length > 3
						%p= link_to "#{@invite_button[0]}", @invite_button[1], class: "#{@invite_button[2]}", action: "#{@invite_button[3]}", league_id: @invite_button[4], method: "#{@invite_button[5]}"
		.col-lg-12.col-md-12.col-sm-12
			%h3 League Ranking
			%table.table.table-hover
				%thead
					%th.col-lg-1 Ranking
					%th.col-lg-2 Participants
					%th.col-lg-1 Total Pts
					%th.col-lg-2 Actions
				%tbody
					- @rankings.each_with_index do |item, i|
						%tr
							%td= i + 1
							%td= item[0]
							%td= item[1][:total_score]
							%td= item[2] if item[2].present?


			/ 	= render partial: "leagues/elimination/ranking"
			/ 	- if @league.season.episode_count
			/ 		= render partial: "leagues/elimination/weekly_score"
			/ .col-lg-12.col-md-12.col-sm-12
			/ 	= render partial: "leagues/fantasy/ranking"			
			/ 	- if @league.season.episode_count
			/ 		= render partial: "leagues/fantasy/weekly_score"

