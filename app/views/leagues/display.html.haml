- if flash[:notice] && flash[:color] == "valid"
	.alert.alert-success{:role => "alert"}= flash[:notice]
- elsif flash[:notice] && flash[:color] == "invalid"
	.alert.alert-danger{:role => "alert"}= flash[:notice]
.panel.panel-default#league_view
	.panel-body
		.col-lg-8
			%h2= @league.name
			%p
				= @league.season.show.name + ": "
				= @league.season.name
			= render "/shows/scoring_system"
			- if @league.active? && @comm_this_league == true
				- if @participants.count < 2
					= link_to "Invite Participants", league_invite_path(@league.id), id: "comm-one", class:"btn btn-warning btn-sm" 
				- else
					= link_to "Invite Participants", league_invite_path(@league.id), class:"btn btn-default btn-sm" 
				= link_to "Edit League", edit_league_path, class:"btn btn-default btn-sm" 
			- elsif @a_participant == false && @league.active?
				= link_to "Join League", rosters_path(@league.id), :action => "join", :league_id => @league.id, :method => :post, class:"btn btn-warning btn-sm"
			- if flash[:notice2] && flash[:color2] == "warning"
				.alert.alert-warning{:role => "alert"}= flash[:notice2] 
		.col-lg-4
			.panel.panel-default
				.panel-body
					League Access:
					- if @league.public_access == true
						Public
					- else 
						Private
					%br/
					League Type:
					- if @league.type == "Fantasy"
						Fantasy
					- elsif @league.type == "Elimination"
						Elimination					
					- if @league.participant_cap.present?
						%br/
						League Members:
						= @league.users.count
						\/
						= @league.participant_cap
						Participants
					- if @league.season.premiere_date.future?
						%br/
						Premieres: 
						= @league.season.premiere_date.strftime("%B %d")
					- else
						%br/
						Premiered: 
						= @league.season.premiere_date.strftime("%B %d")
					- if @league.draft_deadline.present?
						%br/
						Draft Deadline: 
						= @league.draft_deadline.strftime("%B %d")
						%p
					= link_to "Edit League", edit_league_path, class:"btn btn-default btn-xs" 

	- case @league.type
	- when "Elimination"
		= render partial: "leagues/elimination/ranking"
		- if @league.season.episode_count
			= render partial: "leagues/elimination/weekly_score"
	- when "Fantasy"
		= render partial: "leagues/fantasy/ranking"			
		- if @league.season.episode_count
			= render partial: "leagues/fantasy/weekly_score"

