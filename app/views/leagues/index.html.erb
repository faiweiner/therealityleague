<div name="header">
  <h2>My Rosters and Leagues</h2>
  <%= link_to(content_tag(:button, "Edit Rosters"), rosters_path) %>
</div>

<div name="participating-leagues">
  
</div>
<table id="all_leagues_table" class="hidden">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= link_to 'Show', league %></td>
        <td><%= link_to 'Edit', edit_league_path(league) %></td>
        <td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>League Lists</h3>
<ul>
  <% @leagues.each do |league| %>
    <li><%= league.name %></li>
  <% end %>
</ul>


<%= link_to 'New League', new_league_path %>
