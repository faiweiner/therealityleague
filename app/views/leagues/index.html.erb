<div>
	<span class="participating-leagues">
		<h2>My Rosters and Leagues</h2>
		<%= link_to(content_tag(:button, "Edit Rosters"), rosters_path) %>
		<%= @current_user.leagues %>
	</span>
	<table id="my_leagues_table">
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3">Show</th>
			</tr>
		</thead>

		<tbody>
			<% @leagues.each do |league| %>
				<tr>
					<td><%= league.name %></td>
					<td><%= link_to 'Show', league %></td>
					<td><%= link_to 'Edit', edit_league_path(league) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div name="commissioning-leagues">
	<h2>Commissioned Leagues</h2>
	<table id="comm_leagues_table"
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3">Show</th>
			</tr>
		</thead>

		<tbody>
			<% @leagues.each do |league| %>
				<tr>
					<td><%= league.name %></td>
					<td><%= link_to 'Show', league %></td>
					<td><%= link_to 'Edit', edit_league_path(league) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>




<!-- TABLE FOR ADMIN ONLY -->
<div>
	<h2>ADMIN ALL LEAGUES</h2>
	<table id="all_leagues_table" class="hidden">
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @all_leagues.each do |league| %>
				<tr>
					<td><%= league.name %></td>
					<td><%= link_to 'Show', league %></td>
					<td><%= link_to 'Edit', edit_league_path(league) %></td>
					<td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

