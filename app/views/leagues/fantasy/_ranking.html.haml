.col-lg-12
	%h3 Fantasy League Ranking
	%table.table.table-hover
		%thead
			%th.col-lg-1 Rank
			%th.col-lg-6 Participants
			%th.col-lg-2 Total Pts
			%th.col-lg-2 Actions
		%tbody
			- @participants_roster_total_sorted.each_with_index do |participant, i|
				%tr{"data-ranking" => i + 1}
					%td= i + 1
					%td= participant[0]
					%td= participant[1]
					%td
						- if participant[0] == @current_user.username
							- if @league.active?
								- if @league.rosters.where(user_id: @current_user.id).first.contestants.empty?
									= link_to "Build Roster", edit_roster_path(@participants_roster_id[participant[0]]), class:"btn btn-primary btn-sm"
								- else
									- if @league.locked?
										= link_to "View", roster_path(@participants_roster_id[participant[0]]), class:"btn btn-primary btn-sm"
									- else
										= link_to "View", roster_path(@participants_roster_id[participant[0]]), class:"btn btn-primary btn-sm"	
										= link_to "Edit", edit_roster_path(@participants_roster_id[participant[0]]), class:"btn btn-primary btn-sm"
							- if @current_user.id != @league.commissioner_id && @league.draft_deadline == nil
								= link_to "Leave League", roster_path(@participants_roster_id[participant[0]]), :action => "destroy", :method => "delete", :leave_league => @league.id, class:"btn-sm pull-right"		
						- else
							= link_to "View", roster_path(@participants_roster_id[participant[0]]), class:"btn btn-default btn-sm"