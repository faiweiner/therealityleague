- if flash[:notice] && flash[:color] == "valid"
	.alert.alert-success{:role => "alert"}= flash[:notice]
- elsif flash[:notice] && flash[:color] == "invalid"
	.alert.alert-warning{:role => "alert"}= flash[:notice]
.panel.panel-default
	.panel-body.text-center
		.row
			%h2= @league.name
			%h4
				= @league.season.show.name + ": "
				= @league.season.name
		.row
			.col-md-offset-4.col-md-4
				#user-widget
					= link_to "Invite users", "/auth/facebook", id: "sign_in", class:'btn btn-primary btn-block', disabled:'disabled'
		.row
			%h3 or
		.row
			%p Copy and paste the below league key and password and share with friends!
		.row
			- if @league.league_password
				.col-md-offset-3.col-md-3.col-lg-offset-3.col-lg-3
					.panel.panel-default
						.panel-heading
							%h3.panel-title League Key:
						.panel-body
							%p= @league.league_key
				.col-md-3.col-lg-3
					.panel.panel-default
						.panel-heading
							%h3.panel-title League Password:
						.panel-body
							%p= @league.league_password
			- else
				.col-lg-offset-4.col-lg-4
					.panel.panel-default
						.panel-heading
							%h3.panel-title League Key:
						.panel-body
							%p= @league.league_key
		.row
			= link_to "Back to League", league_path(@league.id), class:'btn btn-default'