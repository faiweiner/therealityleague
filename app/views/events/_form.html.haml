.col-lg-12
	= form_for(:point_entry, :url => {:action => "create"}, :html => {:method => "post"}, class:"form-horizontal", :role => "form") do |f|
		/ Error Messages
		.row.form-group
			- if flash[:notice] && flash[:color] == "valid"
				.alert.alert-success{:role => "alert"}= flash[:notice]
			- elsif flash[:notice] && flash[:color] == "invalid"
				.alert.alert-warning{:role => "alert"}= flash[:notice]
			- elsif flash[:notice] && flash[:color] == "prohibited"
				.alert.alert-danger{:role => "alert"}
					%p= flash[:notice]
					- if @point.errors.any?
						%p
							= pluralize(@point.errors.count, "error")
							prohibited this event from being tracked:
						%ul
							- @point.errors.full_messages.each do |message|
								%li= message
		/ End Error Messages
		/ Form Portion
		.row.form-group.field.has-feedback
			= f.label :show_id
			%br/
			= f.select :show_select, options_for_select(Show.select_show, 'id'), {:selected => "Select one"}, class:"form-control", :required => true
		.row.form-group.field.has-feedback
			= f.label :season_id
			= f.select :season_select, options_for_select(Season.select_season, 'id'), {}, class:"form-control", :required => true
		.row.form-group.field.has-feedback
			= f.label :contestant_id
			= f.select :contestant_select, options_for_select(Contestant.select_contestant, 'id'), {}, class:"form-control", :required => true
		.row.form-group.field.has-feedback
			= f.label :episode_id
			= f.select :episode_select, options_for_select(Episode.select_episode, 'id'), {}, class:"form-control", :required => true
		.row.form-group.field.has-feedback
			= f.label :event_type
			= f.select :event_type_select, options_for_select(Event.select_type), {}, class:"form-control", :required => true
		.row.form-group.field.has-feedback
			= f.label :event_id
			= f.select :event_select, options_for_select(Event.select_event, 'id'), {}, class:"form-control", :required => true
		.row.form-group.actions
			= f.submit "Save", class:"btn btn-primary btn-md"
			= link_to "Cancel", points_path, class:"btn btn-default btn-md"