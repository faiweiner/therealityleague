<div class="panel panel-default">
	<div class="panel-body">
		<div class="panel-header">
			<div class="col-md-12">
				<h2>Manage Point Schemas</h2>
			</div>
		</div>
		<div class="panel-body">
			<div class="col-md-3">
				<div class="row">
					<% @shows.each do |show| %>
						<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= show.id %>">
							<button class="btn btn-md btn-primary btn-block">
								<%= show.name %>
							</button>
						</a>
						<br>
					<% end %>
				</div>
				<div class="row">
					<button type="button" class="btn btn-danger btn-block" data-toggle="collapse" data-target="#demo">
					  Add new points schema
					</button>

					<div id="demo" class="collapse">
						<div class="panel-group">
							<br>
							<%= render "form" %>						
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-9">
				<div class="panel-group" id="accordion">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title" id="panel-title-dynamic">
									Click a show to view
							</h4>
						</div>
						<% @shows.each do |show| %>
							<div id="collapse<%= show.id %>" class="panel-collapse collapse">
								<div class="panel-body">
									<div class="row">
										<div class="col-lg-12">
											<table class="table table-striped events-table">
												<thead>
													<th data-field="type" data-sortable="true" class="col-lg-2">Type</th>
													<th data-field="event" data-sortable="true" class="col-lg-6">Event</th>
													<th data-field="points_asgn" data-sortable="true" class="col-lg-1">Points</th>
													<th class="col-lg-1">Actions</th>
												</thead>
												<% show.events.each do |event| %>
													<tr>
														<td><%= event.type %></td>
														<td><%= event.event %></td>
														<td><%= event.points_asgn %></td>
														<td><button class="btn btn-default edit">Edit</i></button><button class="btn btn-primary">Save</button></td>
													</tr>
												<% end %>
											</table>
										</div>

										
									</div>
								</div>
							</div>
						<% end %>




					</div>
				</div>
			</div>
		</div>
	</div>
</div>