<div class="signin_form">
	<h3>SIGN IN NOW!</h3>
	<%= form_tag('/login', method: "post", :class => "form-horizontal", :row => "form") do %>
		<div class="form-group">
			<%= label_tag :email, 'Email', class:'col-sm-2 control-label' %>
			<div class="col-sm-10">
				<%= text_field_tag 'email', nil, placeholder: 'email@domain.com', :autofocus => true %>  
			</div>
		</div>
		<div class="form-group">
			<%= label_tag(:password, 'Password', class:'col-sm-2 control-label') %>
			<div class="col-sm-10">
				<%= password_field_tag(:password) %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<input type="checkbox"> Remember me
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= submit_tag("Sign in", :class => "form_submit btn btn-default") %>
				<br>
				<br>
				<div id="user-widget">
					<% if current_user %>
						Welcome <strong><%= current_user.name %></strong>!
						<%= link_to "Sign out", logout_path, id: "sign_out",class:'btn btn-default' %>
					<% else %>
						<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class:'btn btn-primary', disabled:'disabled' %>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
	
</div>
		
	