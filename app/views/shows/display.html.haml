.panel.panel-default
	.panel-body
		.col-lg-6.col-md-6
			%h2
				= @show.name
				= render "scoring_system"
		.col-lg-6.text-right
			.panel-group
				- if @current_user && @current_user.admin?
					= link_to "Edit Show", edit_show_path(@show.id), class:"btn btn-default btn-sm"
					= link_to "Add New Season", new_season_show_path(@show.id), class:"btn btn-default btn-sm"
					= link_to "Back to Shows", shows_path, class:"btn btn-default btn-sm"
		.panel-body
			%table.table.table-hover
				%thead
					%tr
						%th.col-lg-10 Season List
						%th.col-lg-2
				%tbody
					- @show.seasons.each do |season|
						%tr
							%td
								%a{:href => season_path(season.id)} 
									Season
									#{ season.number}: 
									= season.name
							%td.text-right
								= link_to "View Season", season_path(season.id), class:"btn btn-default btn-sm"