<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-6">
			<h2><%= @show.name %></h2>
			<%= image_tag(@show.image, class:"thumbnail") %>
		</div>
		<div class="col-md-6 text-right text-bottom">
			<% if @current_user && @current_user.admin? %>
				<%= link_to "Edit Show", edit_show_path(@show.id), class:"btn btn-default" %>
				<%= link_to "Back to Shows", shows_path, class:"btn btn-default" %>
			<% end %>
			<% @show.seasons.each do |season| %>
				<%= season.name %>
			<% end %>
		</div>
		<div class="panel-body">
		</div>
	</div>
</div>