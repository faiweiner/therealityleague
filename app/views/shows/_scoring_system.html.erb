<!-- Large modal -->
<button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-md">View scoring system</button>

<div class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myMediumModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-md">
		<div class="modal-content">
			 <div class="modal-header text-center">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="myModalLabel"><%= @show.name %>'s Scoring System</h4>
			</div>
			<div class="modal-body">
				<h4>Elimination/Survival</h4>
				<table class="table table-striped" id="score-system-table">
					<thead>
						<th>Event</th>
						<th>Points</th>
					</thead>
					<tbody>
						<% @rules_survival.each do |rule| %>
							<tr>
								<td><%= rule.event %></td>
								<td><%= rule.points_asgn %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<h4>Show/Game</h4>
				<table class="table table-striped" id="score-system-table">
					<thead>
						<th>Event</th>
						<th>Points</th>
					</thead>
					<tbody>
						<% @rules_game.each do |rule| %>
							<tr>
								<td><%= rule.event %></td>
								<td><%= rule.points_asgn %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<h4>Extracurricular</h4>
				<table class="table table-striped" id="score-system-table">
					<thead>
						<th>Event</th>
						<th>Points</th>
					</thead>
					<tbody>
						<% @rules_extra.each do |rule| %>
							<tr>
								<td><%= rule.event %></td>
								<td><%= rule.points_asgn %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>