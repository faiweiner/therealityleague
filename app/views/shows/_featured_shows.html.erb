<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-12">
			<h1>Featured Shows</h1>
			<p>Here are some of the most popular shows at the moment:</p>
			<div class="row">
				<% @featured_shows.each do |show| %>
					<div class="col-sm-4 col-md-3">
						<div class="thumbnail">
							<div class="img-thumbnail-container">
								<img src="<%= show.image %>" class="img-thumbnail"/>						
							</div>
							<div class="caption">
								<h4><%= show.name %></h4>
								<p>Starts: <%= show.premiere_date.strftime("%B %d") %></p>
								<p><%= link_to(content_tag(:button, "Explore Show", class:'btn btn-primary'), show_path(show.id)) %></p>
							</div>
						</div>
					</div>
				<% end %>
			</div>			
			<%= link_to('Browse All Shows', shows_path, class: "btn btn-default btn-lg") %>
		</div>
	</div>
</div>
