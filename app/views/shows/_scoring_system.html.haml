%button.btn.btn-primary.btn-sm{"data-target" => ".bs-example-modal-md", "data-toggle" => "modal"} View scoring system
.modal.fade.bs-example-modal-md{"aria-hidden" => "true", "aria-labelledby" => "myMediumModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog.modal-md
		.modal-content
			.modal-header.text-center
				%button.close{"data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} Ã—
					%span.sr-only Close
				%h4#myModalLabel.modal-title
					= @show.name
					's Scoring System
			.modal-body.text-left
				%h4 Elimination/Survival
				%table#score-system-table.table.table-striped
					%thead
						%th Event
						%th Points
					%tbody
						- @rules_survival.each do |rule|
							%tr
								%td= rule.description
								%td= rule.points_asgn
				%h4 Show/Game
				%table#score-system-table.table.table-striped
					%thead
						%th Event
						%th Points
					%tbody
						- @rules_game.each do |rule|
							%tr
								%td= rule.description
								%td= rule.points_asgn
				%h4 Extracurricular
				%table#score-system-table.table.table-striped
					%thead
						%th Event
						%th Points
					%tbody
						- @rules_extra.each do |rule|
							%tr
								%td= rule.description
								%td= rule.points_asgn
			.modal-footer
				%button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close