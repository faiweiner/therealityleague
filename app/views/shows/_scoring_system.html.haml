/ Large modal
%button.btn.btn-info.btn-sm{"data-target" => ".bs-example-modal-md", "data-toggle" => "modal"} League Rules & Scoring System
.modal.fade.bs-example-modal-md{"aria-hidden" => "true", "aria-labelledby" => "myMediumModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog.modal-md
		.modal-content
			.modal-header.text-center
				%button.close{"data-dismiss" => "modal", :type => "button"}
					%span{"aria-hidden" => "true"} Ã—
					%span.sr-only Close
				%h4#myModalLabel.modal-title
					= "#{@show.name}'s Scoring System"
			.modal-body.text-left
				- @rules_collection.each do |type|
					%table.table.table-condensed.table-striped
						%thead
							%th= type[0]
							%th Points
						- type[1].each do |rule|
							%tbody
								%tr
									%td= rule.description
									%td= rule.points_asgn
			.modal-footer
				%button.btn.btn-default.btn-sm.pull-left{"data-dismiss" => "modal", :type => "button"} Close