%h4 Scheme
= form_for(@scheme, remote: true) do |f|
	- if @scheme.errors.any?
		#error_explanation
			%h2
				= pluralize(@scheme.errors.count, "error")
				prohibited this score from being saved:
			%ul
				- @scheme.errors.full_messages.each do |message|
					%li= message
	.form-group.field#scheme_form_type
		= f.label :type
		%br/
		= select_tag :type, options_for_select(Scheme.select_type), {name: "scheme[type_select]", id: "scheme_type_dropdown", class: "form-control", disabled: true}
		= f.text_field :type, placeholder: "Input new scheme type", name: "scheme[type_text]", id: "scheme_type_text", class: "form-control hidden"
	.form-group.field
		= f.label :description
		%br/
		= f.text_area :description, class: "form-control"
	.form-group.field
		= f.label :points_asgn, "Points assignment"
		%br/
		= f.number_field :points_asgn, class: "form-control", placeholder: 0
	.actions
		%br/
		= f.submit "Add new scheme", action: :create, class: "btn btn-md btn-default submit", id: "new_scheme_submit"