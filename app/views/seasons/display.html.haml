.panel.panel-default#season-display
	.panel-body
		.col-lg-7
			%h2
				= @season.show.name + ": "
				= @season.name
			%p
				Premieres: 
				= @season.premiere_date.strftime("%B %d")
			= link_to "Find a league", leagues_search_path, class:"btn btn-primary btn-sm"
			= render "shows/scoring_system"
			= link_to "Back to #{@season.show.name}", show_path(@season.show.id), class:"btn btn-default btn-sm"
			= link_to "Back to All Shows", shows_path, class:"btn btn-default btn-sm"
		.col-lg-5.text-right
			- if @current_user && @current_user.admin?
				= link_to "Edit Season", edit_season_path(@season.id), class:"btn btn-default btn-sm"
				- if @season.contestants.count > 0
					= link_to "Edit Contestants", contestants_season_path(@season.id), class:"btn btn-default btn-sm"
				- else
					= link_to "Add Contestants", new_contestant_path(@season.id), class:"btn btn-default btn-sm"
		- if @season.episodes.any?
			.panel-body
				%table.table.table-hover
					%thead
						%tr
							%th.col-lg-3 Episode List
							%th.col-lg-2 Air Date
					%tbody
						- @season.episodes.each_with_index do |episode, index|
							%tr
								%td
									%a{:href => episode_path(episode.id)} 
										Episode
										#{ index+1 }
								%td
									= episode.air_date.strftime("%b %d, %Y")
	.panel-body
		.col-lg-12
			%h4 Contestants
			- @contestants.each do |contestant|
				.col-xs-3.col-sm-2.col-md-2.col-lg-2
					- if contestant.present == true
						.thumbnail.fading{"data-id" => contestant.id}
							= image_tag contestant.image
							.caption
								%p.name= contestant.name
								%p.status 
									(#{contestant.status_on_show})
							/ 		
					- else
						.thumbnail.fading.eliminated{"data-contestant-id" => contestant.id}
							= image_tag contestant.image
							.caption
								%p.name= contestant.name
								%p.status 
									(#{contestant.status_on_show})
							/ 		