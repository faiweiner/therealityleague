.panel.panel-default
	.panel-body
		.col-md-12
			%h2
				= @season.show.name
				\:
				= @season.name
				- if @current_user && @current_user.admin?
					= link_to "Edit Show", edit_season_path(@season.id), class:"btn btn-default"
					= link_to "Edit Contestants", contestants_season_path(@season.id), class:"btn btn-default"
					= link_to "Back to Shows", seasons_path, class:"btn btn-default"
		.panel-body
			.col-md-3
				.row
					.col-xs-12.col-sm-6.col-md-12
						= image_tag @season.image, class:"img-thumbnail"
					.col-xs-12.col-sm-6.col-md-12
						%h4 Description:
						= @season.description
					.col-md-12
						- if @season.expired == true
							%h4
								Premiered: 
								%br/
								#{@season.premiere_date.strftime("%B %d, %Y")}
						- else
							%h4
								Premieres: 
								%br/
								#{@season.premiere_date.strftime("%B %d")}
							= link_to "Find a league for this show", leagues_search_path, class:"btn btn-default"
			.col-md-9
				%h4 Contestants
				- @contestants.each do |contestant|
					.col-xs-6.col-sm-3.col-md-4.col-lg-4
						.thumbnail.tmbn-contestant
							= image_tag contestant.image
							.caption
								%h4
									= contestant.name
									= contestant.status
								Age: #{contestant.age}
								%br/
								Occupation: #{contestant.occupation}
			/ end