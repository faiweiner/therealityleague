.panel.panel-default
	.panel-body
		.col-md-12
			%h2
				= @season.show.name
				\:
				= @season.name
		.col-md-6.text-right.text-bottom
			- if @current_user && @current_user.admin?
				= link_to "Edit Show", edit_season_path(@season.id), class:"btn btn-default"
				= link_to "Edit Contestants", contestants_season_path(@season.id), class:"btn btn-default"
				= link_to "Back to Shows", seasons_path, class:"btn btn-default"
		.panel-body
			.col-md-9.col-md-push-3
				.panel-body
					%h4 Contestants
					- @contestants.each do |contestant|
						.col-sm-6.col-md-4
							.thumbnail.tmbn-contestant
								= image_tag contestant.image
								.caption
									%h4
										= contestant.name
										= contestant.status
									Age: #{contestant.age}
									%br/
									Occupation: #{contestant.occupation}
			.col-md-3.col-md-pull-9
				.row
					.col-md-12
						= image_tag @season.image, class:"img-thumbnail"
				.row
					.col-md-12
						%h4 Description:
						= @season.description
				.row
					.col-md-12
						- if @season.expired == true
							%h4
								Premiered: #{@season.premiere_date.strftime("%B %d, %Y")}
							%p= @season.description
						- else
							%h4
								Premieres: #{@season.premiere_date.strftime("%B %d")}
							= link_to "Find a league for this show", leagues_search_path, class:"btn btn-default"
			/ end