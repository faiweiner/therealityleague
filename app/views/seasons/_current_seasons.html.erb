<div class="panel panel-default">
	<div class="panel-body">
		<div class="panel-heading">
			<h2>Current Shows</h2>
		</div>
		<% @seasons.each do |show| %>
			<div class="col-sm-4 col-md-3">
				<div class="thumbnail">
					<%= link_to image_tag(show.image, :alt => show.name), season_path(show.id), class:"img-thumbnail" %>
					<div class="caption caption-lg">
						<h4><%= show.name %></h4>
						<p>Starts: <%= show.premiere_date.strftime("%B %d") %></p>
						<p><%= link_to "Explore Show", season_path(show.id), class:"btn btn-primary" %></p>
					</div>
				</div>
			</div>    
		<% end %>
	</div>
</div>