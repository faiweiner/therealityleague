<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title row">
			<span class="col-md-10">
				<h3><%= @roster.league.name %></h3>
				<p><%= @roster.league.season.name %></p>
			</span>
			<span>
					<h4 class="small">Deadline: <%= @roster.league.season.premiere_date.strftime("%B %d") %></h4>
					<%= link_to "Save", roster_path(@roster.id), class:"btn btn-primary" %>
			</span>
		</div>
		<!-- FIXME with jQuery -->
	</div>
	<div class="panel-body">
