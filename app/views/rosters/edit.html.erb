			<div class="row", id="contestantBoard">
				<%= render partial: "current_available_contestants" %>
			</div>
		</div>
		<!-- END Contestant Board -->
		<!-- Roster Board -->
		<div class="col-sm-6 col-md-8">
			<h3>Your Roster</h3>
