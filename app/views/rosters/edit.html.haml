.panel.panel-default
	.panel-body
		.col-md-9.col-lg-9
			%h3= @roster.league.name
			%p
				= @roster.league.season.show.name + ": "
				= @roster.league.season.name
			%p 
		.col-md-3.col-lg-3.text-right
			= link_to "Back to League", league_path(@roster.league), class: "btn btn-default btn-sm"
		#roster-board
			= render partial: "rosters/current_roster"